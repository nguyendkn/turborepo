# Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
# MongoDB with Docker Compose authentication (with authSource)
DATABASE_URI=mongodb://admin:EIRHYVAdViEpScjK@localhost:37077/turbo?authSource=admin

# Redis Configuration
REDIS_URL=redis://localhost:36379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-for-development
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long-for-development
